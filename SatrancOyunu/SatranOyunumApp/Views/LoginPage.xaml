<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SatranOyunumApp.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Giriş Yap"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Arka plan resmi (Magnus Carlsen) -->
        <Image Source="https://i.guim.co.uk/img/media/699cce4914b90ae0ba89787178bc48314d50eb89/0_84_5081_3223/master/5081.jpg?width=1900&amp;dpr=2&amp;s=none&amp;crop=none"
               Aspect="AspectFill" />

        <!-- *** DEĞİŞTİRİLEN: Koyu overlay şeffaflığı 0.6'dan 0.3'e düşürüldü *** -->
        <BoxView Color="Black" Opacity="0.3" />

        <!-- Login formu -->
        <ScrollView VerticalOptions="Center" Padding="40,20">
            <StackLayout Spacing="20">

                <!-- Login formu -->
                <!-- *** DEĞİŞTİRİLEN: Frame şeffaflığı azaltıldı *** -->
                <Frame BackgroundColor="#1a1a1a" 
                       Opacity="0.85"
                       CornerRadius="20" 
                       Padding="30,40"
                       HasShadow="True">
                    <StackLayout Spacing="25">

                        <!-- Başlık -->
                        <Label Text="♔ SATRANÇ OYUNU ♔" 
                               FontSize="28" 
                               FontAttributes="Bold"
                               TextColor="Gold"
                               HorizontalOptions="Center" />

                        <Label Text="Giriş Yap" 
                               FontSize="20" 
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,0,0,20" />

                        <!-- Email -->
                        <StackLayout Spacing="8">
                            <Label Text="Email" TextColor="LightGray" FontSize="14" />
                            <Frame BorderColor="Gold" 
                                   BackgroundColor="#2a2a2a" 
                                   Opacity="0.9"
                                   CornerRadius="10" 
                                   Padding="0" 
                                   HasShadow="False">
                                <Entry x:Name="EmailEntry" 
                                       Placeholder="Email adresinizi girin"
                                       PlaceholderColor="Gray"
                                       TextColor="White"
                                       BackgroundColor="Transparent"
                                       Keyboard="Email"
                                       Margin="15,10" />
                            </Frame>
                        </StackLayout>

                        <!-- Şifre -->
                        <StackLayout Spacing="8">
                            <Label Text="Şifre" TextColor="LightGray" FontSize="14" />
                            <Frame BorderColor="Gold" 
                                   BackgroundColor="#2a2a2a" 
                                   Opacity="0.9"
                                   CornerRadius="10" 
                                   Padding="0" 
                                   HasShadow="False">
                                <Entry x:Name="SifreEntry" 
                                       Placeholder="Şifrenizi girin"
                                       PlaceholderColor="Gray"
                                       TextColor="White"
                                       BackgroundColor="Transparent"
                                       IsPassword="True"
                                       Margin="15,10" />
                            </Frame>
                        </StackLayout>

                        <!-- Giriş Yap Butonu -->
                        <Button x:Name="GirisButton"
                            Text="GİRİŞ YAP" 
                                BackgroundColor="Gold"
                                TextColor="Black"
                                FontAttributes="Bold"
                                FontSize="16"
                                CornerRadius="10"
                                HeightRequest="50"
                                Clicked="OnGirisYapClicked"
                                Margin="0,10,0,0" />

                        <!-- Kayıt ol linki -->
                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="Center"
                                     Spacing="5"
                                     Margin="0,20,0,0">
                            <Label Text="Hesabın yok mu?" 
                                   TextColor="LightGray" 
                                   FontSize="14" />
                            <Label Text="Kayıt Ol" 
                                   TextColor="Gold" 
                                   FontSize="14"
                                   FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnKayitOlTapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                        <!-- YENİ EKLENEN: Şifre Değiştir ve Oyuna Git Linkleri -->
                        <StackLayout Orientation="Horizontal" 
                                     HorizontalOptions="Center"
                                     Spacing="20"
                                     Margin="0,15,0,0">
                            <Label Text="Şifreyi Değiştir" 
                                   TextColor="Gold" 
                                   FontSize="14"
                                   FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSifreDegistirTapped" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label Text="|" 
                                   TextColor="LightGray" 
                                   FontSize="14" />

                            <Label Text="Oyuna Git" 
                                   TextColor="Gold" 
                                   FontSize="14"
                                   FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnOyunaGitTapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>